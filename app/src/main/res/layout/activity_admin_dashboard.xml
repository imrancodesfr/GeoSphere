<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:titleTextColor="@android:color/white"
            app:navigationIconTint="@android:color/white"
            app:title="@string/admin_dashboard" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewResults"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                android:text="View Player Results"
                android:textSize="18sp"
                app:cornerRadius="16dp"
                android:backgroundTint="@color/ocean_primary"
                app:icon="@android:drawable/ic_menu_sort_by_size"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconSize="32dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewReports"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="View Reported Questions"
                android:textSize="18sp"
                app:cornerRadius="16dp"
                android:backgroundTint="@color/sunset_accent"
                app:icon="@android:drawable/ic_dialog_alert"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconSize="32dp"/>

        </LinearLayout>

    </LinearLayout>
</layout>