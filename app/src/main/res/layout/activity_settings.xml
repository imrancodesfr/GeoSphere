<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:titleTextColor="@android:color/white"
            app:navigationIconTint="@android:color/white"
            app:title="@string/settings" />

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- SECTION 1 â€” APPEARANCE             -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appearance"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:letterSpacing="0.12"
            android:textAllCaps="true"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="6dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Sound Effects -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sound_effects"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:drawableStart="@drawable/ic_achievement"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/gray_medium" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSoundEffects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="@color/colorPrimary" android:layout_marginStart="16dp"/>

                <!-- Animations -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/animations"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:drawableStart="@drawable/ic_globe"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/gray_medium" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAnimations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="@color/colorPrimary" android:layout_marginStart="16dp"/>

                <!-- Theme Picker -->
                <LinearLayout
                    android:id="@+id/rowTheme"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="App Theme"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:drawableStart="@drawable/ic_home"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/gray_medium" />

                    <TextView
                        android:id="@+id/tvCurrentTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp"
                        android:text="Midnight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_medium"
                        android:textSize="18sp"
                        android:text=" â€º"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <!-- Theme color swatches (shown below the row) -->
                <LinearLayout
                    android:id="@+id/layoutThemePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="12dp"
                    android:visibility="gone">

                    <!-- Swatches added programmatically -->

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- SECTION 2 â€” QUIZ PREFERENCES      -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiz Preferences"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:letterSpacing="0.12"
            android:textAllCaps="true"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="6dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Notifications -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/notifications"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:drawableStart="@drawable/ic_leaderboard"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/gray_medium" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- SECTION 3 â€” FEEDBACK               -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:letterSpacing="0.12"
            android:textAllCaps="true"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="6dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Send Feedback -->
                <LinearLayout
                    android:id="@+id/rowFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Send Feedback"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:drawableStart="@drawable/ic_menu"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/gray_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_medium"
                        android:textSize="18sp"
                        android:text="â€º" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="@color/colorPrimary" android:layout_marginStart="16dp"/>

                <!-- Rate App -->
                <LinearLayout
                    android:id="@+id/rowRateApp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rate GeoSphere â­"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:drawableStart="@drawable/ic_achievement"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/bright_yellow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_medium"
                        android:textSize="18sp"
                        android:text="â€º" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="@color/colorPrimary" android:layout_marginStart="16dp"/>

                <!-- Share App -->
                <LinearLayout
                    android:id="@+id/rowShareApp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Share App"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:drawableStart="@drawable/ic_share"
                        android:drawablePadding="12dp"
                        android:drawableTint="@color/gray_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_medium"
                        android:textSize="18sp"
                        android:text="â€º" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- SECTION 4 â€” ABOUT                  -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:letterSpacing="0.12"
            android:textAllCaps="true"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="6dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- App name + icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textSize="28sp"
                        android:text="ðŸŒ" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GeoSphere"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAppVersion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_medium"
                            android:textSize="13sp"
                            android:text="Version 1.0.0" />

                    </LinearLayout>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="@color/colorPrimary" android:layout_marginBottom="12dp"/>

                <!-- Developer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Developer"
                        android:textColor="@color/gray_medium"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Imran Khan"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Contact Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Contact"
                        android:textColor="@color/gray_medium"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="imrancodesfr@gmail.com"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <!-- GitHub -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GitHub"
                        android:textColor="@color/gray_medium"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvGitHub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="github.com/imrancodesfr"
                        android:textColor="@color/colorAccent"
                        android:textSize="13sp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <!-- Package name / Build -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Package"
                        android:textColor="@color/gray_medium"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="com.example.geosphere"
                        android:textColor="@color/gray_dark"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Copyright footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Â© 2025â€“2026 Imran Khan Â· GeoSphere"
            android:textColor="@color/gray_dark"
            android:textSize="12sp"
            android:paddingTop="24dp"
            android:paddingBottom="8dp" />

    </LinearLayout>
</ScrollView>